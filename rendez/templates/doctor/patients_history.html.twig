{% extends 'base.html.twig' %}

{% block title %}Historique des patients - {{ doctor.user.fullName }}{% endblock %}

{% block body %}
<div class="container-fluid min-vh-100" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <!-- Header -->
    <div class="row">
        <div class="col-12">
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container">
                    <a class="navbar-brand fw-bold fs-4" href="{{ path('doctor_dashboard') }}">
                        <i class="fas fa-user-md me-2"></i>
                        Dr. {{ doctor.user.fullName }}
                    </a>
                    <div class="navbar-nav ms-auto">
                        <span class="navbar-text me-3">
                            <i class="fas fa-stethoscope me-2"></i>{{ doctor.specialty }}
                        </span>
                        <a class="btn btn-light" href="{{ path('app_logout') }}">
                            <i class="fas fa-sign-out-alt me-1"></i>
                            Déconnexion
                        </a>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container py-5">
        <div class="row mb-2">
            <div class="col-12 text-start">
                <a href="{{ path('doctor_dashboard') }}" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left me-2"></i>Retour au dashboard
                </a>
            </div>
        </div>
        
        <div class="row mb-3">
            <div class="col-12">
                <form method="get" class="row g-2 align-items-center">
                    <div class="col-md-2">
                        <label class="form-label mb-0" for="filter_day">Jour</label>
                        <input type="number" min="1" max="31" class="form-control" id="filter_day" name="filter_day" placeholder="Jour" value="{{ filterDay|default('') }}">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label mb-0" for="filter_month">Mois</label>
                        <input type="number" min="1" max="12" class="form-control" id="filter_month" name="filter_month" placeholder="Mois" value="{{ filterMonth|default('') }}">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label mb-0" for="filter_year">Année</label>
                        <input type="number" min="2000" max="2100" class="form-control" id="filter_year" name="filter_year" placeholder="Année" value="{{ filterYear|default('') }}">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button class="btn btn-light w-100" type="submit">Filtrer</button>
                    </div>
                </form>
            </div>
        </div>
            <div class="col-12">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white">
                        <h2 class="mb-0">
                            <i class="fas fa-users me-2"></i>
                            Historique des patients consultés
                        </h2>
                    </div>
                </div>
            </div>
        </div>

        {% if patientAppointments|length == 0 %}
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                Aucun patient consulté pour le moment.
            </div>
        {% else %}
            {% for patientId, data in patientAppointments %}
                <div class="card shadow-lg border-0 mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-user me-2"></i>
                            {{ data.patient.fullName }}
                        </h5>
                        <small>{{ data.patient.email }} | {{ data.patient.phone|default('Téléphone non renseigné') }}</small>
                    </div>
                    <div class="card-body">
                        <h6 class="mb-3">
                            <i class="fas fa-calendar-alt me-2"></i>
                            Rendez-vous ({{ data.appointments|length }})
                        </h6>
                        <div class="table-responsive">
                            <table class="table table-hover table-sm">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Date</th>
                                        <th>Heure</th>
                                        <th>Statut</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for appointment in data.appointments %}
                                        <tr>
                                            <td>{{ appointment.appointmentDate|date('d/m/Y') }}</td>
                                            <td>{{ appointment.startAt|date('H:i') }} - {{ appointment.endAt|date('H:i') }}</td>
                                            <td>
                                                {% if appointment.status == 'confirmed' %}
                                                    <span class="badge rounded-pill bg-info text-dark px-3 py-2">
                                                        <i class="fas fa-clock me-1"></i>Confirmé
                                                    </span>
                                                {% elseif appointment.status == 'done' %}
                                                    <span class="badge rounded-pill bg-success px-3 py-2">
                                                        <i class="fas fa-check-circle me-1"></i>Terminé
                                                    </span>
                                                {% elseif appointment.status == 'canceled' %}
                                                    <span class="badge rounded-pill bg-danger px-3 py-2">
                                                        <i class="fas fa-times-circle me-1"></i>Annulé
                                                    </span>
                                                {% else %}
                                                    <span class="badge rounded-pill bg-warning text-dark px-3 py-2">
                                                        <i class="fas fa-hourglass-half me-1"></i>En attente
                                                    </span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
</div>
{% endblock %}
