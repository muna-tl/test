{% extends 'base.html.twig' %}

{% block title %}Calendrier des rendez-vous - {{ doctor.user.fullName }}{% endblock %}

{% block body %}
<div class="container-fluid min-vh-100" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container py-5">
            <!-- Tableau de filtrage -->
            <form method="get" class="row g-2 align-items-center mb-3">
                <div class="col-md-3">
                    <label class="form-label mb-0" for="filter_schedule">Plage horaire</label>
                    <select class="form-select" id="filter_schedule" name="filter_schedule">
                        <option value="">Toutes</option>
                        <option value="morning" {% if filterSchedule == 'morning' %}selected{% endif %}>Matin (08:00-12:00)</option>
                        <option value="afternoon" {% if filterSchedule == 'afternoon' %}selected{% endif %}>Après-midi (12:00-17:00)</option>
                        <option value="evening" {% if filterSchedule == 'evening' %}selected{% endif %}>Soir (17:00-21:00)</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label mb-0" for="filter_day">Jour</label>
                    <input type="number" min="1" max="31" class="form-control" id="filter_day" name="filter_day" placeholder="Jour" value="{{ filterDay|default('') }}">
                </div>
                <div class="col-md-2">
                    <label class="form-label mb-0" for="filter_month">Mois</label>
                    <input type="number" min="1" max="12" class="form-control" id="filter_month" name="filter_month" placeholder="Mois" value="{{ filterMonth|default('') }}">
                </div>
                <div class="col-md-2">
                    <label class="form-label mb-0" for="filter_year">Année</label>
                    <input type="number" min="2000" max="2100" class="form-control" id="filter_year" name="filter_year" placeholder="Année" value="{{ filterYear|default('') }}">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button class="btn btn-light w-100" type="submit">Filtrer</button>
                </div>
            </form>

            <!-- Affichage groupé par période -->
            <div class="mt-4">
                {% set labels = {
                    'today': "Aujourd'hui",
                    'tomorrow': "Demain",
                    'next_week': "Semaine prochaine",
                    'next_month': "Mois prochain"
                } %}
                {% for key, label in labels %}
                    <div class="card mb-4">
                        <div class="card-header bg-secondary text-white">
                            <strong>{{ label }}</strong>
                        </div>
                        <div class="card-body">
                            {% if groupedAppointments[key]|length == 0 %}
                                <p>Aucun rendez-vous pour {{ label|lower }}.</p>
                            {% else %}
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Heure</th>
                                            <th>Patient</th>
                                            <th>Statut</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for appointment in groupedAppointments[key] %}
                                            <tr>
                                                <td>{{ appointment.appointmentDate|date('d/m/Y') }}</td>
                                                <td>{{ appointment.startAt|date('H:i') }} - {{ appointment.endAt|date('H:i') }}</td>
                                                <td>{{ appointment.patient.fullName }}</td>
                                                <td>
                                                    {% if appointment.status == 'confirmed' %}
                                                        <span class="badge rounded-pill bg-info text-dark px-3 py-2">
                                                            <i class="fas fa-clock me-1"></i>Confirmé
                                                        </span>
                                                    {% elseif appointment.status == 'done' %}
                                                        <span class="badge rounded-pill bg-success px-3 py-2">
                                                            <i class="fas fa-check-circle me-1"></i>Terminé
                                                        </span>
                                                    {% elseif appointment.status == 'canceled' %}
                                                        <span class="badge rounded-pill bg-danger px-3 py-2">
                                                            <i class="fas fa-times-circle me-1"></i>Annulé
                                                        </span>
                                                    {% else %}
                                                        <span class="badge rounded-pill bg-warning text-dark px-3 py-2">
                                                            <i class="fas fa-hourglass-half me-1"></i>En attente
                                                        </span>
                                                    {% endif %}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

