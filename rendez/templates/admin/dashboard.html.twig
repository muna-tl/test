{% extends 'base.html.twig' %}

{% block title %}Dashboard Administrateur - Hôpital Cheikh Zaid{% endblock %}

{% block body %}
<div class="container-fluid min-vh-100" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <!-- Header -->
    <div class="row">
        <div class="col-12">
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container">
                    <a class="navbar-brand fw-bold fs-4" href="{{ path('admin_dashboard') }}">
                        <i class="fas fa-hospital-alt me-2"></i>
                        Hôpital Cheikh Zaid - Admin
                    </a>
                    <div class="navbar-nav ms-auto">
                        <a class="btn btn-outline-light me-3" href="{{ path('admin_specialties') }}">
                            <i class="fas fa-stethoscope me-2"></i>
                            Gérer les spécialités
                        </a>
                        <a class="btn btn-outline-light me-3" href="{{ path('admin_add_doctor') }}">
                            <i class="fas fa-user-md me-2"></i>
                            Ajouter un docteur
                        </a>
                        <a class="btn btn-light" href="{{ path('app_logout') }}">
                            <i class="fas fa-sign-out-alt me-1"></i>
                            Déconnexion
                        </a>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container py-5">
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white">
                        <h2 class="mb-0">
                            <i class="fas fa-calendar-check me-2"></i>
                            Dashboard Administrateur
                        </h2>
                        <p class="mb-0 mt-2">Bienvenue {{ app.user.fullName }} - Gestion des rendez-vous confirmés</p>
                        
                        <!-- Formulaire de filtrage -->
                        <form method="get" class="mt-3">
                            <div class="row g-2">
                                <!-- Recherche par code de confirmation -->
                                <div class="col-md-3">
                                    <label class="form-label text-white small">
                                        <i class="fas fa-hashtag me-1"></i>Code de confirmation
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-barcode"></i></span>
                                        <input type="text" class="form-control" name="search_code" value="{{ searchCode|default('') }}" placeholder="Ex: A123" />
                                    </div>
                                </div>
                                <!-- Filtre par spécialité -->
                                <div class="col-md-3">
                                    <label class="form-label text-white small">
                                        <i class="fas fa-stethoscope me-1"></i>Spécialité
                                    </label>
                                    <select class="form-select" name="specialty">
                                        <option value="">Toutes les spécialités</option>
                                        {% for specialty in activeSpecialties %}
                                            <option value="{{ specialty.name }}" {% if specialty.name == selectedSpecialty %}selected{% endif %}>{{ specialty.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>

                                <!-- Filtre par jour -->
                                <div class="col-md-2">
                                    <label class="form-label text-white small">
                                        <i class="fas fa-calendar-day me-1"></i>Jour
                                    </label>
                                    <select class="form-select" name="filter_day">
                                        <option value="">Tous</option>
                                        {% for day in 1..31 %}
                                            <option value="{{ day }}" {% if filterDay == day %}selected{% endif %}>{{ day }}</option>
                                        {% endfor %}
                                    </select>
                                </div>

                                <!-- Filtre par mois -->
                                <div class="col-md-3">
                                    <label class="form-label text-white small">
                                        <i class="fas fa-calendar-alt me-1"></i>Mois
                                    </label>
                                    <select class="form-select" name="filter_month">
                                        <option value="">Tous</option>
                                        <option value="1" {% if filterMonth == 1 %}selected{% endif %}>Janvier</option>
                                        <option value="2" {% if filterMonth == 2 %}selected{% endif %}>Février</option>
                                        <option value="3" {% if filterMonth == 3 %}selected{% endif %}>Mars</option>
                                        <option value="4" {% if filterMonth == 4 %}selected{% endif %}>Avril</option>
                                        <option value="5" {% if filterMonth == 5 %}selected{% endif %}>Mai</option>
                                        <option value="6" {% if filterMonth == 6 %}selected{% endif %}>Juin</option>
                                        <option value="7" {% if filterMonth == 7 %}selected{% endif %}>Juillet</option>
                                        <option value="8" {% if filterMonth == 8 %}selected{% endif %}>Août</option>
                                        <option value="9" {% if filterMonth == 9 %}selected{% endif %}>Septembre</option>
                                        <option value="10" {% if filterMonth == 10 %}selected{% endif %}>Octobre</option>
                                        <option value="11" {% if filterMonth == 11 %}selected{% endif %}>Novembre</option>
                                        <option value="12" {% if filterMonth == 12 %}selected{% endif %}>Décembre</option>
                                    </select>
                                </div>

                                <!-- Filtre par année -->
                                <div class="col-md-2">
                                    <label class="form-label text-white small">
                                        <i class="fas fa-calendar me-1"></i>Année
                                    </label>
                                    <select class="form-select" name="filter_year">
                                        <option value="">Toutes</option>
                                        {% for year in 2024..2030 %}
                                            <option value="{{ year }}" {% if filterYear == year %}selected{% endif %}>{{ year }}</option>
                                        {% endfor %}
                                    </select>
                                </div>

                                <!-- Boutons d'action -->
                                <div class="col-md-2 d-flex align-items-end">
                                    <div class="btn-group w-100">
                                        <button class="btn btn-light" type="submit" title="Appliquer les filtres">
                                            <i class="fas fa-filter me-1"></i>Filtrer
                                        </button>
                                        <a href="{{ path('admin_dashboard') }}" class="btn btn-outline-light" title="Réinitialiser les filtres">
                                            <i class="fas fa-redo"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        {% if selectedSpecialty or filterDay or filterMonth or filterYear %}
            <div class="alert alert-info mb-4">
                <i class="fas fa-filter me-2"></i>
                <strong>Filtres actifs:</strong>
                {% if selectedSpecialty %}
                    <span class="badge bg-primary ms-2">Spécialité: {{ selectedSpecialty }}</span>
                {% endif %}
                {% if filterDay %}
                    <span class="badge bg-primary ms-2">Jour: {{ filterDay }}</span>
                {% endif %}
                {% if filterMonth %}
                    <span class="badge bg-primary ms-2">
                        Mois: {{ ['', 'Janvier', 'Février', 'Mars', 'Avril', 'Mai', 'Juin', 'Juillet', 'Août', 'Septembre', 'Octobre', 'Novembre', 'Décembre'][filterMonth] }}
                    </span>
                {% endif %}
                {% if filterYear %}
                    <span class="badge bg-primary ms-2">Année: {{ filterYear }}</span>
                {% endif %}
            </div>
        {% endif %}

        {% if searchCode is defined and searchCode %}
            {% if searchedAppointment %}
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="fas fa-receipt me-2"></i>Résultat pour le code: <span class="text-primary">{{ searchCode }}</span>
                        </h5>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <p class="mb-1"><strong>Patient</strong></p>
                                <p class="mb-0">{{ searchedAppointment.patient.fullName }}</p>
                                <small class="text-muted">{{ searchedAppointment.patient.email }}</small>
                            </div>
                            <div class="col-md-4">
                                <p class="mb-1"><strong>Docteur</strong></p>
                                <p class="mb-0">{{ searchedAppointment.doctor.user.fullName }}</p>
                                <small class="text-muted"><i class="fas fa-id-badge me-1"></i>{{ searchedAppointment.doctor.doctorId }} • {{ searchedAppointment.doctor.specialty.name }}</small>
                            </div>
                            <div class="col-md-4">
                                <p class="mb-1"><strong>Date & Heure</strong></p>
                                <p class="mb-0">{{ searchedAppointment.startAt|date('d/m/Y') }}</p>
                                <small class="text-muted">{{ searchedAppointment.startAt|date('H:i') }} - {{ searchedAppointment.endAt|date('H:i') }}</small>
                            </div>
                        </div>
                        <div class="d-flex align-items-center gap-2 mt-3">
                            <span class="badge bg-dark">Code: {{ searchedAppointment.confirmationCode }}</span>
                            {% if searchedAppointment.status == 'confirmed' %}
                                <span class="badge bg-info text-dark">
                                    <i class="fas fa-clock me-1"></i>Confirmé
                                </span>
                            {% elseif searchedAppointment.status == 'done' %}
                                <span class="badge bg-success">
                                    <i class="fas fa-check-circle me-1"></i>Terminé
                                </span>
                            {% elseif searchedAppointment.status == 'canceled' %}
                                <span class="badge bg-danger">
                                    <i class="fas fa-times-circle me-1"></i>Annulé
                                </span>
                            {% else %}
                                <span class="badge bg-secondary">{{ searchedAppointment.status }}</span>
                            {% endif %}

                            <a class="btn btn-outline-primary btn-sm ms-auto" href="{{ path('appointment_pdf', {'id': searchedAppointment.id}) }}">
                                <i class="fas fa-file-pdf me-1"></i>PDF
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-warning">
                    <i class="fas fa-info-circle me-2"></i>Aucun rendez-vous trouvé pour le code <strong>{{ searchCode }}</strong>.
                </div>
            {% endif %}
        {% endif %}

        {% if selectedSpecialty %}
            <h4 class="mb-4">Rendez-vous pour la spécialité : <span class="text-primary">{{ selectedSpecialty }}</span></h4>
        {% else %}
            <h4 class="mb-4">Tous les rendez-vous</h4>
        {% endif %}
        
        {% if totalItems is defined and totalItems > 0 %}
            <div class="row mb-3">
                <div class="col-12">
                    <div class="alert alert-light">
                        <i class="fas fa-info-circle me-2"></i>
                        Total: {{ totalItems }} rendez-vous - Page {{ currentPage }} sur {{ totalPages }}
                    </div>
                </div>
            </div>
        {% endif %}

        {% for specialty, appointments in appointmentsBySpecialty %}
            {% if not selectedSpecialty or specialty == selectedSpecialty %}
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <strong>{{ specialty }}</strong>
                    </div>
                    <div class="card-body">
                        {% if appointments|length == 0 %}
                            <p>Aucun rendez-vous pour cette spécialité.</p>
                        {% else %}
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Patient</th>
                                        <th>Docteur</th>
                                        <th>Date</th>
                                        <th>Heure</th>
                                        <th>Statut</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for appointment in appointments %}
                                        <tr>
                                            <td>
                                                <strong>{{ appointment.patient.fullName }}</strong><br>
                                                <small class="text-muted">{{ appointment.patient.email }}</small>
                                            </td>
                                            <td>
                                                <strong>{{ appointment.doctor.user.fullName }}</strong><br>
                                                <small class="text-muted">
                                                    <i class="fas fa-id-badge me-1"></i>{{ appointment.doctor.doctorId }}
                                                </small>
                                            </td>
                                            <td>{{ appointment.startAt|date('d/m/Y') }}</td>
                                            <td>{{ appointment.startAt|date('H:i') }} - {{ appointment.endAt|date('H:i') }}</td>
                                            <td>
                                                {% if appointment.status == 'confirmed' %}
                                                    <span class="badge rounded-pill bg-info text-dark px-3 py-2">
                                                        <i class="fas fa-clock me-1"></i>Confirmé
                                                    </span>
                                                {% elseif appointment.status == 'done' %}
                                                    <span class="badge rounded-pill bg-success px-3 py-2">
                                                        <i class="fas fa-check-circle me-1"></i>Terminé
                                                    </span>
                                                {% elseif appointment.status == 'canceled' %}
                                                    <span class="badge rounded-pill bg-danger px-3 py-2">
                                                        <i class="fas fa-times-circle me-1"></i>Annulé
                                                    </span>
                                                {% else %}
                                                    <span class="badge rounded-pill bg-warning text-dark px-3 py-2">
                                                        <i class="fas fa-hourglass-half me-1"></i>En attente
                                                    </span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    {% if appointment.status != 'confirmed' %}
                                                        <form method="post" action="{{ path('admin_update_status', {'id': appointment.id}) }}" style="display: inline;">
                                                            <input type="hidden" name="status" value="confirmed">
                                                            <button type="submit" class="btn btn-outline-info btn-sm rounded-pill px-3" title="Confirmer">
                                                                <i class="fas fa-check-circle me-1"></i>Confirmer
                                                            </button>
                                                        </form>
                                                    {% endif %}
                                                    {% if appointment.status != 'done' %}
                                                        <form method="post" action="{{ path('admin_update_status', {'id': appointment.id}) }}" style="display: inline;">
                                                            <input type="hidden" name="status" value="done">
                                                            <button type="submit" class="btn btn-outline-success btn-sm rounded-pill px-3 ms-1" title="Marquer comme terminé">
                                                                <i class="fas fa-check me-1"></i>Terminer
                                                            </button>
                                                        </form>
                                                    {% endif %}
                                                    {% if appointment.status != 'canceled' %}
                                                        <form method="post" action="{{ path('admin_update_status', {'id': appointment.id}) }}" style="display: inline;">
                                                            <input type="hidden" name="status" value="canceled">
                                                            <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3 ms-1" title="Annuler" onclick="return confirm('Êtes-vous sûr de vouloir annuler ce rendez-vous ?')">
                                                                <i class="fas fa-times me-1"></i>Annuler
                                                            </button>
                                                        </form>
                                                    {% endif %}
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        {% endfor %}
        
        <!-- Pagination -->
        {% if totalPages is defined and totalPages > 1 %}
            <div class="row">
                <div class="col-12">
                    <nav aria-label="Navigation des pages">
                        <ul class="pagination justify-content-center">
                            <!-- Bouton Précédent -->
                            <li class="page-item {% if currentPage == 1 %}disabled{% endif %}">
                                <a class="page-link" href="{% if currentPage > 1 %}{{ path('admin_dashboard', {'page': currentPage - 1, 'specialty': selectedSpecialty, 'filter_day': filterDay, 'filter_month': filterMonth, 'filter_year': filterYear}) }}{% else %}#{% endif %}">
                                    <i class="fas fa-chevron-left me-1"></i>Précédent
                                </a>
                            </li>
                            
                            <!-- Première page -->
                            {% if currentPage > 3 %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('admin_dashboard', {'page': 1, 'specialty': selectedSpecialty, 'filter_day': filterDay, 'filter_month': filterMonth, 'filter_year': filterYear}) }}">1</a>
                                </li>
                                {% if currentPage > 4 %}
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                {% endif %}
                            {% endif %}
                            
                            <!-- Pages autour de la page courante -->
                            {% for i in range(max(1, currentPage - 2), min(totalPages, currentPage + 2)) %}
                                <li class="page-item {% if i == currentPage %}active{% endif %}">
                                    <a class="page-link" href="{{ path('admin_dashboard', {'page': i, 'specialty': selectedSpecialty, 'filter_day': filterDay, 'filter_month': filterMonth, 'filter_year': filterYear}) }}">{{ i }}</a>
                                </li>
                            {% endfor %}
                            
                            <!-- Dernière page -->
                            {% if currentPage < totalPages - 2 %}
                                {% if currentPage < totalPages - 3 %}
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                {% endif %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('admin_dashboard', {'page': totalPages, 'specialty': selectedSpecialty, 'filter_day': filterDay, 'filter_month': filterMonth, 'filter_year': filterYear}) }}">{{ totalPages }}</a>
                                </li>
                            {% endif %}
                            
                            <!-- Bouton Suivant -->
                            <li class="page-item {% if currentPage == totalPages %}disabled{% endif %}">
                                <a class="page-link" href="{% if currentPage < totalPages %}{{ path('admin_dashboard', {'page': currentPage + 1, 'specialty': selectedSpecialty, 'filter_day': filterDay, 'filter_month': filterMonth, 'filter_year': filterYear}) }}{% else %}#{% endif %}">
                                    Suivant<i class="fas fa-chevron-right ms-1"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        {% endif %}
  

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
    
    .card-header {
        border-radius: 0.375rem 0.375rem 0 0 !important;
    }
</style>
{% endblock %}