{% extends 'base.html.twig' %}

{% block title %}Confirmation RDV{% endblock %}

{% block body %}
<div class="container py-5" style="background-color: none ; min-height: 100vh;">
    <div class="card shadow-lg border-0" style="background: linear-gradient(135deg, #cfe0daff 0%, #059669 100%);">
        <div class="card-body text-white p-5">
            <div class="text-center mb-4">
                <i class="fas fa-check-circle fa-5x mb-3"></i>
                <h2 class="fw-bold">Rendez-vous Confirmé !</h2>
                <p class="lead">Votre rendez-vous a été enregistré avec succès.</p>
            </div>

            <div class="bg-white text-dark rounded p-4 mb-4 shadow">
                <h4 class="mb-3 text-success"><i class="fas fa-calendar-check me-2"></i>Récapitulatif</h4>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <p class="mb-2">
                            <i class="fas fa-user-md me-2 text-success"></i>
                            <strong>Docteur :</strong>
                        </p>
                        <p class="ms-4">{{ appointment.doctor.user.fullName }}</p>
                        <p class="ms-4">
                            <small><i class="fas fa-stethoscope me-1"></i>{{ appointment.doctor.specialty.name }}</small>
                        </p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <p class="mb-2">
                            <i class="fas fa-user me-2 text-success"></i>
                            <strong>Patient :</strong>
                        </p>
                        <p class="ms-4">{{ appointment.patient.fullName }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <p class="mb-2">
                            <i class="fas fa-calendar me-2 text-success"></i>
                            <strong>Date :</strong>
                        </p>
                        <p class="ms-4">{{ appointment.startAt|date('d/m/Y') }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <p class="mb-2">
                            <i class="fas fa-clock me-2 text-success"></i>
                            <strong>Heure :</strong>
                        </p>
                        <p class="ms-4">{{ appointment.startAt|date('H:i') }} - {{ appointment.endAt|date('H:i') }}</p>
                    </div>
                </div>
            </div>

            <div class="text-center">
                <a href="{{ path('appointment_pdf', {'id': appointment.id}) }}" class="btn btn-light btn-lg shadow">
                    <i class="fas fa-file-pdf me-2"></i>Télécharger le PDF
                </a>
                <a href="{{ path('app_dashboard') }}" class="btn btn-outline-light btn-lg ms-2">
                    <i class="fas fa-home me-2"></i>Retour au tableau de bord
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
