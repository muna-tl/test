<div class="col-md-6 col-lg-4">
    <div class="card h-100 shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-2">
                <h6 class="card-title mb-0">
                    <i class="fas {{ document.iconClass }} me-2"></i>
                    {{ document.title }}
                </h6>
                <span class="badge bg-info">{{ document.type|capitalize }}</span>
            </div>
            
            {% if document.description %}
                <p class="card-text text-muted small">{{ document.description }}</p>
            {% endif %}

            <div class="mt-3">
                <small class="text-muted d-block mb-1">
                    <i class="fas fa-calendar me-1"></i>{{ document.uploadedAt|date('d/m/Y à H:i') }}
                </small>
                <small class="text-muted d-block">
                    <i class="fas fa-user-md me-1"></i>Dr. {{ document.uploadedBy.fullName }}
                </small>
            </div>
        </div>
        <div class="card-footer bg-white border-top-0">
            <div class="d-flex gap-2">
                <a href="{{ path('medical_record_download_document', {'id': document.id}) }}" class="btn btn-outline-primary btn-sm flex-fill" target="_blank">
                    <i class="fas fa-download me-1"></i>Télécharger
                </a>
                {% if is_granted('ROLE_DOCTOR') %}
                    <form method="post" action="{{ path('medical_record_delete_document', {'id': document.id}) }}" class="flex-fill" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce document ?')">
                        <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                            <i class="fas fa-trash me-1"></i>Supprimer
                        </button>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
</div>
